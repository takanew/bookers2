<h2 class="mt-3">New book</h2>
<!--urlを指定している-->
<%= form_with(model: book, url: books_path) do |f| %>
    <div class="form-group">
    <%= f.label :title %>
    <!--brを使用して段落でいいのか？-->
    <br>
    <%= f.text_field :title %>
    </div>

    <div class="form-group">
    <%= f.label :body %>
    <br>
    <%= f.text_area :body %>
    </div>

    <div class="form-group">
    <%= f.submit 'Create Book', class: 'btn', style: 'background-color: #28a745; color: white' %>
    </div>

<% end %>