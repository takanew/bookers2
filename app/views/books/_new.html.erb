<h1>New book</h1>
<!--urlを指定している-->
<%= form_with(model: book, url: books_path) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <!--brを使用して段落でいいのか？-->
    <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <br>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book', class: 'btn', style: 'background-color: #28a745; color: white' %>

<% end %>