<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        
        <%= form_with model: @book do |f| %>

          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title %>
          </div>

          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body %>
          </div>

          <div class="form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>

        <%= link_to "Show", book_path(@book) %> |
        <%= link_to "Back", books_path %>
