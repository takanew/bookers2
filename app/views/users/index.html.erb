<p id="notice"></p>
 <div class="container px-5 px-sm-0">
<div class="row">
  
<div class="col-md-3">
<!--User info-->
<%= render 'books/list', user: current_user %>

<!--新規投稿画面-->
<%= render 'books/new', book: @book %>
<!--<div class="col-md-3">の/div-->
</div>


<!--user一覧画面-->
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
          <!--多分画像はメソッドから呼び出したほうがいい-->
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<!--<div class="col-md-8 offset-md-1">の/div-->
</div>

<!--<div class="row">の/div-->
</div>

<!--<div class="container px-5 px-sm-0">の/div-->
</div>