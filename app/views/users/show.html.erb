<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
<!--User info-->
<%= render 'books/list', user: @user %>

<!--新規投稿画面-->
<%= render 'books/new', book: @book %>

    <!--<div class="col-md-3">の/div-->
    </div>
    

<!--特定のユーザーの投稿一覧-->

<div class="col-md-8 offset-md-1">
  
   <h2>Books</h2>
  <table class="table table-hover table-inverse">
    
  <thead>
    
    <tr>
      
      <th></th>
      
      <th>Title</th>
      
      <th>Opinion</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    　<!--N対１の関係性のため、booksで指定する？-->
     <% @user.books.each do |book| %>
      <tr>
        <td><%= image_tag(@user.get_profile_image(100, 100)) %></td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

